<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_anchorGravity="top"
    tools:context=".Game">

    <TextView
        android:id="@+id/p1finger3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"

        android:layout_marginTop="88dp"
        android:background="@drawable/button_style_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1finger2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p1finger1"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginStart="52dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button_style_blue"
        app:layout_constraintBottom_toTopOf="@+id/p1finger2"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p1finger2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"

        android:background="@drawable/button_style_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p2finger2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="52dp"

        android:background="@drawable/button_style_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p2finger3"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="88dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/button_style_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2finger2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p2finger1"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginEnd="52dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button_style_red"
        app:layout_constraintBottom_toTopOf="@+id/p2finger2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p1order"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_style_blue"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/round"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p2order"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style_red"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/round"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/round"
        android:textColor="@color/cardview_dark_background"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/p1point"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="75dp"
        android:text="@string/p1point"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/round"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2point"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:text="@string/p2point"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/round"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roundText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/round" />



    <TextView
        android:id="@+id/pointText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:text="@string/point"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/round"
        app:layout_constraintTop_toBottomOf="@+id/p1point"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/pointText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:text="@string/point"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/round"
        app:layout_constraintTop_toBottomOf="@+id/p2point"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="143dp"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:text="@string/winner"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/p2finger1"
        app:layout_constraintStart_toEndOf="@+id/p1finger1"
        app:layout_constraintTop_toBottomOf="@+id/roundText" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminateBehavior="cycle"
        android:rotationY="180"
        app:layout_constraintEnd_toStartOf="@+id/progressBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminateBehavior="cycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toEndOf="@+id/progressBar1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageCheckButton"
        android:layout_width="82dp"
        android:layout_height="85dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/resetIconBlue"
        app:layout_constraintEnd_toStartOf="@+id/p2finger3"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/p1finger3"
        app:layout_constraintTop_toBottomOf="@+id/roundText"
        app:layout_constraintVertical_bias="0.793"
        app:srcCompat="@drawable/checkbutton" />

    <ImageView
        android:id="@+id/resetIconBlue"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="TODO"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1finger3"
        app:srcCompat="@drawable/reset" />

    <ImageView
        android:id="@+id/gameReset"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCheckButton"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@drawable/reset" />

    <ImageView
        android:id="@+id/resetIconRed"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="TODO"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2finger3"
        app:srcCompat="@drawable/reset" />

    <TextView
        android:id="@+id/p1winner"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/button_style_blue"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageCheckButton"
        app:layout_constraintEnd_toStartOf="@+id/p2finger2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/p1finger2"
        app:layout_constraintTop_toBottomOf="@+id/winner"
        app:layout_constraintVertical_bias="0.288"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p2winner"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/button_style_red"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageCheckButton"
        app:layout_constraintEnd_toStartOf="@+id/p2finger2"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/p1finger2"
        app:layout_constraintTop_toBottomOf="@+id/winner"
        app:layout_constraintVertical_bias="0.287"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>